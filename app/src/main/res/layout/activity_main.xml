<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaur0183algonquincollege.hsvcolorpicker.MainActivity">


    <TextView
        android:id="@+id/colorSwatch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:height="200dp"
        android:background="#000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/colorSwatch"
        android:layout_marginTop="20dp"
        android:labelFor="@+id/hue"
        android:text="Hue"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/hueSB"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hue"
        android:background="@drawable/hue"
        android:max="359"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hueSB"
        android:layout_marginTop="20dp"
        android:labelFor="@+id/saturationSB"
        android:text="Saturation"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/saturationSB"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saturation"
        android:layout_centerVertical="true"
        android:background="@drawable/saturation"
        android:max="359"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saturationSB"
        android:layout_marginTop="20dp"
        android:labelFor="@+id/valueSB"
        android:text="Value"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/valueSB"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value"
        android:layout_centerVertical="true"
        android:background="@drawable/value"
        android:max="359"
        android:orientation="horizontal" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valueSB"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/blackButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#000000"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/redButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#ff0000"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/limeButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#00FF00"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/blueButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#0000FF"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/yellowButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#ffff00"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/cyanButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#00FFFF"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/magentaButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#FF00FF"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/silverButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#C0C0C0"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/grayButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#808080"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/maroonButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#ff0000"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/oliveButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#800000"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/greenButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#008000"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/purpleButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#800080"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/tealButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#008080"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />

            <Button
                android:id="@+id/navyButton"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="#000080"
                android:onClick="buttonClick"
                android:paddingBottom="20dp"
                android:text="" />
        </LinearLayout>

    </HorizontalScrollView>


</RelativeLayout>
